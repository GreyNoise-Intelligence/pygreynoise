{% import "macros.txt.j2" as macros with context %}
{%- if verbose %}
{% for ip_context in results %}
{%- if ip_context.riot %}
<riot>{{ ip_context.ip }}</riot> is in RIOT dataset.

          <header>OVERVIEW</header>
----------------------------
<key>IP</key>: <value>{{ ip_context.ip }}</value>
<key>RIOT</key>: {{ macros.classification(ip_context.riot) }}
<key>Category</key>: <value>{{ ip_context.category }}</value>
<key>Trust Level</key>: <value>{{ ip_context.trust_level }}</value>
<key>Name</key>: <value>{{ ip_context.name }}</value>
<key>Description</key>: <value>{{ ip_context.description }}</value>
<key>Explanation</key>: <value>{{ ip_context.explanation }}</value>
<key>Last Updated</key>: <value>{{ ip_context.last_updated }}</value>
<key>Reference</key>: <value>{{ ip_context.reference }}</value>
{%- else %}
<not-riot>{{ ip_context.ip }}</not-riot> is <bold>NOT FOUND</bold> in RIOT dataset.
{%- endif %}
{%- endfor %}
{%- else %}
{% for ip_context in results %}
{%- if ip_context.riot %}
<riot>{{ ip_context.ip }}</riot> is in RIOT dataset. Name: <value>{{ ip_context.name }}</value> Category: <value>{{ ip_context.category }}</value> Trust Level: <value>{{ ip_context.trust_level }}</value> Last Updated: <value>{{ ip_context.last_updated }}</value>
{%- elif ip_context.message %}
{{ ip_context.message }}
{%- else %}
<not-riot>{{ ip_context.ip }}</not-riot> is <bold>NOT FOUND</bold> in RIOT dataset.
{%- endif %}
{%- endfor %}
{%- endif %}
